{
  "OllamaBaseUrl": "http://localhost:11434",
  "WorkspaceRoot": "./workspace",
  "DefaultModel": "devsharp",
  "PermissionSettings": {
    "permissionLevel": 1,
    "enableDryRun": true,
    "enableAuditLog": true,
    "allowedExtensions": [".cs", ".txt", ".json", ".md", ".xml", ".yml", ".yaml", ".config"],
    "blockedPaths": ["bin/", "obj/", ".git/", ".vs/", "node_modules/", "packages/"],
    "dangerousCommands": ["rm", "del", "format", "fdisk", "shutdown", "reboot", "halt"]
  }
}